<Window x:Class="IdeaBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IdeaBot"
        mc:Ignorable="d"
        Title="IdeaBot" Height="236.461" Width="418.029" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="btnSettings" Content="Settings" Margin="0,10,10,0" FontSize="16" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="btnSettings_Click" />


        <Button x:Name="btnBotState" Content="Start" Margin="0,0,10,10" FontSize="16" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnBotState_Click"/>
        <RichTextBox IsReadOnly="True" x:Name="rtbLog" Margin="10,40" Background="Black" Foreground="Lime">
            <FlowDocument LineHeight="1">
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
